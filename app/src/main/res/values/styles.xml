<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="GrayButtonStyle" parent="CommonButtonStyle">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="WhiteButtonStyle" parent="CommonButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="YellowButtonStyle" parent="CommonButtonStyle">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
